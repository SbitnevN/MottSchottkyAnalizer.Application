<UserControl x:Class="MottSchottkyAnalizer.Application.Controls.FileControls.FileImporter.FileImporterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MottSchottkyAnalizer.Application.Controls.FileControls.FileImporter"
             xmlns:localization="clr-namespace:MottSchottkyAnalizer.Application.Controls.FileControls.FileImporter.Localization"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="400">
    
    <Border BorderBrush="{StaticResource SecondaryBrush}" BorderThickness="2" CornerRadius="5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                   Text="{Binding FilePath}"
                   VerticalAlignment="Center"
                   TextTrimming="CharacterEllipsis"
                   Margin="2,2,8,2"/>

            <Button Grid.Column="1"
                Margin="-2"
                Style="{StaticResource RoundedButton}"
                Content="{x:Static localization:LocalizedStrings.Import}"
                Command="{Binding ImportFileCommand}"
                BorderBrush="{StaticResource SecondaryBrush}"
                BorderThickness="2"
                MinWidth="80"/>
        </Grid>
    </Border>
</UserControl>
